@model SessionViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="center">Edit session</h1>
<hr />

<div class="row">
    <div class="col-md-16">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="SessionTime" class="control-label"></label>
                <input asp-for="SessionTime" class="form-control" />
                <span asp-validation-for="SessionTime" class="text-danger"></span>
            </div>
            
            <div class="form-group center m-3">
                <input type="submit" value="Save" class="btn btn-primary width-200-px" />
            </div>
            <div class="form-group center m-3">
                <a class="btn btn-secondary width-200-px" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
